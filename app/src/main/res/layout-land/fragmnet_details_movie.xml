<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <ImageView
        android:id="@+id/popular_poster_details"
        android:layout_width="416dp"
        android:layout_height="107dp"
        android:layout_marginStart="8dp"

        android:layout_marginTop="16dp"
        android:contentDescription="@string/popular_poster_for_details_page"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraintLayout"
        android:layout_width="645dp"
        android:layout_height="133dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="28dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/popular_poster_details">

        <ImageView
            android:id="@+id/popular_backdrop_details"
            android:layout_width="120dp"
            android:layout_height="90dp"

            android:layout_marginStart="8dp"

            android:layout_marginTop="8dp"
            android:contentDescription="@string/popular_poster_for_details_page"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/title"
            android:layout_width="122dp"
            android:layout_height="18dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:hint="title"
            android:textSize="14sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="@+id/popular_backdrop_details"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/popular_backdrop_details" />

        <TextView
            android:id="@+id/orign_lan_title"
            android:layout_width="wrap_content"
            android:layout_height="21dp"
            android:layout_marginStart="16dp"
            android:text="@string/lanugage_title"
            android:textSize="12sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="@+id/popular_backdrop_details"
            app:layout_constraintStart_toEndOf="@+id/popular_backdrop_details"
            app:layout_constraintTop_toTopOf="@+id/popular_backdrop_details"
            app:layout_constraintVertical_bias="0.333" />

        <TextView
            android:id="@+id/orign_language"
            android:layout_width="0dp"
            android:layout_height="18dp"
            android:layout_marginStart="4dp"
            android:layout_marginEnd="32dp"
            android:hint="Lanugage_details"
            android:textSize="12sp"
            app:layout_constraintBottom_toBottomOf="@+id/orign_lan_title"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/orign_lan_title"
            app:layout_constraintTop_toTopOf="@+id/orign_lan_title" />

        <TextView
            android:id="@+id/orign_popularity_title"
            android:layout_width="wrap_content"
            android:layout_height="21dp"
            android:layout_marginTop="8dp"
            android:text="@string/popularity_title"
            android:textSize="12sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="@+id/orign_lan_title"
            app:layout_constraintTop_toBottomOf="@+id/orign_lan_title" />

        <TextView
            android:id="@+id/orign_popularity"
            android:layout_width="0dp"
            android:layout_height="18dp"
            android:layout_marginStart="4dp"
            android:layout_marginEnd="32dp"
            android:hint="popularity_details"
            android:textSize="12sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/orign_popularity_title"
            app:layout_constraintTop_toTopOf="@+id/orign_popularity_title" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <TextView
        android:id="@+id/overview_title"
        android:layout_width="wrap_content"
        android:layout_height="21dp"
        android:layout_marginTop="16dp"
        android:text="@string/overview_title"
        android:textSize="12sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@+id/constraintLayout"
        app:layout_constraintTop_toBottomOf="@+id/constraintLayout" />

    <TextView
        android:id="@+id/overview_details"
        android:layout_width="653dp"
        android:layout_height="49dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:hint="overview_details"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/constraintLayout"
        app:layout_constraintStart_toStartOf="@+id/overview_title"
        app:layout_constraintTop_toBottomOf="@+id/overview_title"
        app:layout_constraintVertical_bias="1.0" />


</androidx.constraintlayout.widget.ConstraintLayout>